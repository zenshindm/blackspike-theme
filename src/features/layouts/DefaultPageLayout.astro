---
import BaseHeader from "@/features/base/BaseHeader.astro";
import NavBar from "@/features/base/NavBar.astro";
import Footer from "@/features/base/Footer.astro";
import websiteSetting from "@/features/websiteSetting.json";
import ImgComp from "@/features/base/ImgComp.astro";

const { title, description, image } = Astro.props;
---

<html
  lang={websiteSetting.websiteLanguage}
  data-theme="blackspike"
  class="scroll-smooth"
>
  <head>
    <BaseHeader title={title} description={description} image={image} />
  </head>

  <body id="top">
    <ImgComp
      src="hero-image.jpg"
      alt="bg image"
      height={1080}
      width={1920}
      className="absolute min-h-svh object-cover inset-0 bottom-auto -z-1 w-full h-auto opacity-20 mask-b-from-50%"
      loading="eager"
    />
    <Fragment set:html={websiteSetting.BodyInsertion} />
    <NavBar />
    <main class="min-h-auto sm:min-h-[70vh]">
      <div class="w-full pt-30"></div>
      <slot />
    </main>
    <Footer />
  </body>
</html>
